<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kindol.o2o.dao.ShopCategoryDao">
    <select id="queryShopCategory" resultType="com.kindol.o2o.entity.ShopCategory">
        SELECT 
        shop_category_id,
        shop_category_name,
        shop_category_desc,
        shop_category_img,
        priority,
        create_time,
        last_edit_time,
        parent_id
        from 
        tb_shop_category
        <where>
            <!--所有商店都位于二级列表中，一级列表用于基本分类-->
            <if test="shopCategoryCondition == null">
                and parent_id is null
            </if>
            <if test="shopCategoryCondition != null">
                and parent_id is not null
            </if>
            <!--当指定parent的时候，索引该parent下对应的category-->
            <if test="shopCategoryCondition != null and shopCategoryCondition.parent != null">
                and parent_id = #{shopCategoryCondition.parent.shopCategoryId}
            </if>
        </where>
        order by
        priority desc
    </select>
</mapper>